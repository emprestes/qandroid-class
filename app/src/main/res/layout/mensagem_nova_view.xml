<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/mensagem_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="@integer/normal"
        android:inputType="text"
        android:hint="@string/mensagem_nome" />

    <EditText
        android:id="@+id/mensagem_corpo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="top"
        android:ems="@integer/normal"
        android:inputType="textMultiLine"
        android:hint="@string/mensagem_corpo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mensagem_limpar"
            android:onClick="limpar" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mensagem_criar"
            android:onClick="salvar" />
    </LinearLayout>
</LinearLayout>