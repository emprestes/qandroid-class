<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/bound_agora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/bound_exibir" />

    <Button
        android:id="@+id/bound_parar_servico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/bound_agora"
        android:text="@string/bound_parar_servico" />

    <TextView
        android:id="@+id/bound_tv_agora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:layout_below="@+id/bound_parar_servico"
        android:textAppearance="?android:attr/textAppearanceLarge"/>
</RelativeLayout>